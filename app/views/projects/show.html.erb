<%= image_tag @project_item.main_image %>

<h1><%= @project_item.title %></h1>

<em><%= @project_item.subtitle %></em>

<p><%= @project_item.body %></p>

<h2>Technologies Used:</h2>
<% @project_item.technologies.each do |t| %>
<p><%= t.name %></p>
<% end %>

<%= link_to "Edit", edit_project_path(@project_item), class: "btn btn-sm btn-outline-secondary" if logged_in?(:site_admin) %>